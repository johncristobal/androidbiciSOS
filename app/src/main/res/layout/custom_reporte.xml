<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="5dp"
        android:id="@+id/layiItem">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageDetalleReporte"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle" app:layout_constraintStart_toEndOf="@+id/imageDetalleReporte"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/imageDetalleReporte"
            android:fontFamily="@font/roboto" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textViewDetalle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
            app:layout_constraintStart_toEndOf="@+id/imageDetalleReporte"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageDetalleReporte" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:textSize="11sp"
            android:gravity="top"/>
</androidx.constraintlayout.widget.ConstraintLayout>