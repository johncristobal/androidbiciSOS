<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amarillo"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.RegisterFragment">

    <ImageView
            android:src="@drawable/backlogindos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView44"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>

    <ImageView
            android:src="@drawable/loginiconuno"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView44"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageView44"
            app:layout_constraintTop_toTopOf="@+id/imageView44" android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintStart_toStartOf="@+id/imageView44"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="320dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="bottom|center"
            android:id="@+id/linearLayout">

        <TextView
                android:text="Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textColor="@color/cafe"
                android:fontFamily="@font/roboto"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/backinput"
                android:ems="10"
                android:id="@+id/editTextName"
                android:textSize="16sp"
                android:singleLine="false"
                android:fontFamily="@font/roboto"/>

        <TextView
                android:text="Correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_marginTop="5dp"
                android:textColor="@color/cafe"
                android:fontFamily="@font/roboto"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/backinput"
                android:ems="10"
                android:id="@+id/editTextCorreo"
                android:textSize="16sp"
                android:singleLine="false"
                android:fontFamily="@font/roboto"/>

        <TextView
                android:text="Contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cafe"
                android:id="@+id/textView12"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/backinput"
                android:ems="10"
                android:id="@+id/editTextPass"
                android:textSize="16sp"
                android:singleLine="false"
                android:fontFamily="@font/roboto" tools:layout_editor_absoluteY="258dp"
                tools:layout_editor_absoluteX="0dp"/>

        <TextView
                android:text="Confirmar contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cafe"
                android:id="@+id/textView13"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/backinput"
                android:ems="10"
                android:id="@+id/editTextPassConfirm"
                android:textSize="16sp"
                android:singleLine="false"
                android:fontFamily="@font/roboto" tools:layout_editor_absoluteY="258dp"
                tools:layout_editor_absoluteX="0dp"/>

        <Button
                android:text="Registrarse"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/buttonIngresarRegistro"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@drawable/backbrown"
                android:textColor="@color/amarillo"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"/>

    </LinearLayout>

    <ImageView
            android:src="@drawable/closeicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewCloseRegister" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>