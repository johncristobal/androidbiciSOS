<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amarillo"
        tools:context=".Fragments.LoginFragment">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parentConst"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/backlogindos"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:id="@+id/imageView44"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/parentConst"
                    app:layout_constraintEnd_toEndOf="@+id/parentConst"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewClose"/>

    <ImageView
            android:src="@drawable/loginiconuno"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView44"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageView44"
            app:layout_constraintTop_toTopOf="@+id/imageView44"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="@+id/imageView44"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="320dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView44"
            android:gravity="bottom|center"
            android:id="@+id/linearLayout">


        <TextView
                android:text="Correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textColor="@color/cafe"
                android:fontFamily="@font/roboto"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/backinput"
                android:ems="10"
                android:id="@+id/editTextCorreo"
                android:textSize="16sp"
                android:singleLine="false"
                android:fontFamily="@font/roboto"/>

        <TextView
                android:text="ContraseÃ±a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cafe"
                android:id="@+id/textView12"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/backinput"
                android:ems="10"
                android:id="@+id/editTextPass"
                android:textSize="16sp"
                android:singleLine="false"
                android:fontFamily="@font/roboto" tools:layout_editor_absoluteY="258dp"
                tools:layout_editor_absoluteX="0dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:foregroundGravity="center"
                android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="120dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/backbrown"
                android:layout_height="40dp">

            <TextView
                    android:text="Ingresar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonIngresar"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/backbrown"
                    android:textColor="@color/amarillo"
                    android:fontFamily="@font/roboto"/>

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:theme="@style/progressBarBlue"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBarIngresar"
                    android:indeterminate="true"
                    android:layout_marginEnd="8dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:text="Registrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRegister"
                android:textColor="@color/cafe"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                android:layout_height="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="180dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/backface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBarFace"
                        android:indeterminate="true"
                        android:layout_marginEnd="8dp"
                        android:visibility="invisible"
                        android:theme="@style/progressBarBlue"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:id="@+id/Facebutton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Continuar con facebook"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/roboto"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"/>
    </LinearLayout>

    <ImageView
            android:src="@drawable/closeicon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewClose" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
