<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            tools:context=".Fragments.RoboBici.RoboDosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/constraintLayout2">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp">

            <TextView
                    android:text="DENUNCIA"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:id="@+id/textView16"/>
            <TextView
                    android:text="Lo siguiente es buscar en los tianguis de la ciudad, sabiendo que frecuentemente las trasladan de un extremo a otro para revenderlas."
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17" android:textSize="12sp"/>

            <TextView
                    android:text="Revisar en SEGUNDAMANO,  MERCADOLIBRE, VIVAANUNCIOS y  MARKETPLACE de facebook."
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18" android:textSize="12sp"/>

            <TextView
                    android:text="Casas de empeño aledañas a la zona de robo."
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19" android:textSize="12sp"/>

            <TextView
                    android:text="TIANGUIS (hay muchos más, éstos son algunos)"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20" android:textSize="12sp"/>

            <TextView
                    android:text="• Santa Cruz Meyehualco -Martes y viernes-\n• El Salado -Miércoles-\n• La Portales -Todos los días-\n• San Felipe -Domingo-\n• San Juan / Texcoco -Domingo-\n• La Raza -Domingo-\n• La Bola -Domingo-"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21" android:textSize="12sp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>