<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        tools:context=".Activities.ContactoActivity">

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/backlineyellow"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/constraintLayout">
    </View>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:srcCompat="@drawable/headcontacto"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/biciwhitejust"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/amarillo"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="15dp"
                        android:id="@+id/textView14"/>

                <TextView
                        android:text="Para cualquier información, queja, sugerencia, comentario o aportación mándanos tus comentarios o contáctanos por nuestras redes sociales"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/textView"
                        android:gravity="center"
                        android:layout_marginEnd="15dp"
                        android:textSize="11sp"
                        android:textColor="#000"
                        android:layout_gravity="center"
                        android:layout_width="0dp" android:fontFamily="@font/roboto"/>

                <TextView
                        android:layout_width="3dp"
                        android:layout_marginEnd="30dp"
                        android:background="@color/amarillo"
                        android:layout_height="match_parent"
                        android:id="@+id/textView22"/>

            </LinearLayout>

            <TextView
                    android:text="Comentarios"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23" android:fontFamily="@font/roboto"/>

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:gravity="top"
                    android:hint="Mensaje..."
                    android:background="@drawable/backinput"
                    android:ems="10"
                    android:id="@+id/ReporteDesc"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:inputType="textMultiLine"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:singleLine="false"
                    android:fontFamily="@font/roboto"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/backbrown"
                    android:layout_width="120dp"
                    android:layout_height="40dp">

                <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:theme="@style/progressBarBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBarMensaje"
                        android:indeterminate="true"
                        android:layout_marginEnd="8dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:text="ENVIAR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonReportar"
                        android:visibility="visible"
                        android:textAlignment="center"
                        android:background="@drawable/backbrown"
                        android:layout_gravity="center|center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/amarillo"
                        android:fontFamily="@font/roboto"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Button
                    android:text="ENVIAR"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:background="@drawable/backbutton"
                    android:layout_height="30dp"
                    android:id="@+id/buttonReportar"/-->

            <TextView
                    android:text="Ó contáctanos por:"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:fontFamily="@font/roboto"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/face"
                        android:id="@+id/imageViewFace"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/twwiter"
                        android:id="@+id/imageViewTwitter"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:paddingStart="20dp"
                          android:paddingEnd="20dp"
                          android:layout_height="wrap_content">
                <TextView
                        android:text="Bicicletas robadas y auxilio vial"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView24"
                        android:layout_weight="1"/>
                <TextView
                        android:text="bicirobos_sosMX"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView25"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
            android:text="Contácto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>