<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#BB000000"
         tools:context=".Fragments.alertas.ApoyoFragment">

    <ImageView
            android:src="@drawable/backalerta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

    <ImageView
            android:textAlignment="center"
            android:src="@drawable/apoyoicon"
            android:textColor="#fff"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/textViewApoyo"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:transitionName="apoyo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewApoyo"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:textAlignment="center"
                android:text="apoyo presencial de la comunidad\nciclista por conflicto / confrontaciÃ³n\ncon automovilista."
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:layout_marginTop="8dp"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/apoyocilicsta"
                android:hint="Detalles particulares..."
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/buttonApoyo"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:singleLine="false"/>

        <TextView
                android:text="convocatoria\npara valla ciclista."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:layout_marginTop="1dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:src="@drawable/vallaciclista"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/imageViewValla"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="30dp"
                android:layout_marginTop="8dp">

            <Button
                    android:text="Regresar"
                    android:layout_gravity="end"
                    android:layout_width="120dp"
                    android:textColor="@color/amarillo"
                    android:layout_margin="10dp"
                    android:background="@drawable/backbrown"
                    android:layout_height="30dp"
                    android:id="@+id/buttonRegresar"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/containerDetalles"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>

</androidx.constraintlayout.ConstraintLayout>