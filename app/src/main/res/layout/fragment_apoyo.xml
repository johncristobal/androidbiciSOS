<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#ff000000"
         tools:context=".Fragments.alertas.ApoyoFragment">

    <ImageView
            android:src="@drawable/backalerta"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="460dp"
            android:id="@+id/imageView5"
            android:paddingTop="40dp"
            android:paddingBottom="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:textAlignment="center"
            android:src="@drawable/apoyoicon"
            android:textColor="#fff"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/textViewApoyo"
            android:textSize="18sp"
            android:transitionName="apoyo"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"/>

    <Button
            android:text="Regresar"
            android:layout_gravity="end"
            android:layout_width="120dp"
            android:textColor="@color/amarillo"
            android:background="@drawable/backbrown"
            android:layout_height="40dp"
            android:id="@+id/buttonRegresar"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/textViewApoyo"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegresar">

        <TextView
                android:textAlignment="center"
                android:text="Apoyo presencial de la comunidad\nciclista por conflicto / confrontaciÃ³n\ncon automovilista."
                android:layout_width="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/apoyocilicsta"
                android:hint="Detalles particulares..."
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/buttonApoyo"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:singleLine="false"/>

        <TextView
                android:text="convocatoria\npara valla ciclista."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:src="@drawable/vallaciclista"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/imageViewValla"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/containerDetalles"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>