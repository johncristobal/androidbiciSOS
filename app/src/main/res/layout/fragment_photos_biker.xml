<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Fragments.PhotosBikerFragment">

    <LinearLayout
            android:id="@+id/borderLinear"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:background="@drawable/backwhiteyellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp">

        <TextView
                android:text="Fotos de tu bicicleta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" android:textAlignment="center"
                android:padding="10dp" android:fontFamily="@font/roboto" android:textSize="16sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="5dp">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:src="@drawable/cameraicon"
                    android:id="@+id/bici1"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    />
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:src="@drawable/cameraicon"
                    android:id="@+id/bici2"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:src="@drawable/cameraicon"
                    android:id="@+id/bici3"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    />

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:src="@drawable/cameraicon"
                    android:id="@+id/bici4"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    />
        </LinearLayout>

        <Button
                android:layout_width="120dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Continuar"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica"
                android:background="@drawable/backbutton"
                android:layout_height="40dp"
                android:id="@+id/aceptarActionPhotos"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>