<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#0d60a0"
        tools:context=".ui.contract.photos.PhotosContractFragment">

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:transitionName="imageView"
            android:src="@drawable/logogtta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textviewtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fotos de la bicicleta"
            android:theme="@style/textThemeBold"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView8"
            app:layout_constraintTop_toTopOf="@id/imageView8" />

    <TextView
            android:id="@+id/textView33"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Toma cuatro fotos de tu bicicleta para registrarla en el seguro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:theme="@style/textTheme"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/textView33" />

    <Button
            android:id="@+id/textButtonBackClient"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Regresar"
            android:textColor="@color/blanco"
            android:theme="@style/textThemeButton"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentPhotos" />


</androidx.constraintlayout.widget.ConstraintLayout>