<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#0d60a0"
        tools:context=".ui.contract.payment.PaymentFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:transitionName="imageView"
                    android:src="@drawable/logogtta"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/textviewtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Datos de pago"
                    android:theme="@style/textThemeBold"
                    android:layout_marginStart="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageView8"
                    app:layout_constraintTop_toTopOf="@id/imageView8" />

            <TextView
                    android:id="@+id/textView33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Te pedimos que lleves a cabo el pago a la siguiente cuenta bancaria o transferencia electrónica:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:theme="@style/textTheme"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <LinearLayout
                    android:id="@+id/linearpayment"
                    android:layout_width="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textView33">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/textTheme"
                        android:text="Banco"
                        app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banco Inbursa"
                        android:theme="@style/textThemeBold"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content"
                        android:text="Número de cuenta"
                        android:theme="@style/textTheme"
                        app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50030378995"
                        android:theme="@style/textThemeBold"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content"
                        android:text="CLABE"
                        android:theme="@style/textTheme"
                        app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="036180500303789959"
                        android:theme="@style/textThemeBold"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:theme="@style/textTheme"
                        app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administradora de Riesgos en hechos de transito terrestre de grupo de GTT A.C."
                        android:theme="@style/textThemeBold"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_height="wrap_content"
                        android:text="Monto"
                        android:theme="@style/textTheme"
                        app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="920.00 MXN"
                        android:theme="@style/textThemeBold"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />

            </LinearLayout>

            <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/blanco"
                    app:layout_constraintStart_toStartOf="@id/linearpayment"
                    app:layout_constraintEnd_toEndOf="@id/linearpayment"
                    app:layout_constraintTop_toBottomOf="@id/linearpayment" />

            <TextView
                    android:id="@+id/textView333"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Al completar el pago, adjunta una imagen con el comprobante:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:theme="@style/textTheme"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

            <Button
                    android:id="@+id/buttonPaymentSet"
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:drawableStart="@drawable/cam_white_t"
                    android:text="Tomar fotografía"
                    style="@style/textButtonTheme"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView333" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
