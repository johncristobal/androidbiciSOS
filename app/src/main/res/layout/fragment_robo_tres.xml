<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            tools:context=".Fragments.RoboBici.RoboTresFragment">

    <androidx.constraintlayout.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:background="@color/com_facebook_button_border_color_focused"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/constraintLayout2">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp">

            <TextView
                    android:text="RECUPERACIÓN"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:id="@+id/textView16"/>
            <TextView
                    android:text="En caso de que ubiques tu bicicleta, lo  siguiente es avisar a una patrulla, mostrarle el acta de denuncia del ministerio público, explicarle la situación (están obligados a brindarte ayuda, si se niegan denunciar a #asuntosinternos) y juntos proceder a recuperar la bicicleta"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"/>


            <TextView
                    android:text="Nunca intentes recuperarla solo, ya que pueden presentarse situaciones violentas con los ladrones."
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="16sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18" android:textSize="12sp"/>

            <TextView
                    android:text="** Cuando la recuperes, compártenos tu experiencia a través de nuestras redes sociales para que la comunidad ciclista le sirva de ejemplo, sepan como actuar y se animen a denunciar y así juntos ejercer presión a las autoridades correspondientes para que  hagan su trabajo **"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19" android:textSize="12sp"/>

        </LinearLayout>

    </androidx.constraintlayout.ConstraintLayout>

    <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.ConstraintLayout>