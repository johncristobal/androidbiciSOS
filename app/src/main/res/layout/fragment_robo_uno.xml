<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context=".Fragments.RoboBici.RoboUnoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:background="@color/com_facebook_button_border_color_focused"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/constraintLayout2">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp">

            <TextView
                    android:text="DENUNCIA"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/textView16"/>
            <TextView
                    android:text="Si bien no es de mucha ayuda denunciar, si lo es el acta que se genera al hacerlo, el cual nos  ayudará a tener una base legal de propiedad."
                    android:layout_width="match_parent"
                    android:layout_marginTop="8sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17" android:textSize="12sp"/>

            <TextView
                    android:text="Es importante que presentes # de serie, factura, fotos y testigos para acreditar la propiedad de tu bici."
                    android:layout_width="match_parent"
                    android:layout_marginTop="8sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView18" android:textSize="12sp"/>

            <TextView
                    android:text="Al presentar denuncia pide como evidencia las grabaciones de cámaras de vigilancia de la ciudad siempre y cuando hubiera una al momento del robo de tu bici."
                    android:layout_width="match_parent"
                    android:layout_marginTop="8sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19" android:textSize="12sp"/>

            <TextView
                    android:text="También puedes presentar denuncia por  internet en la siguiente dirección:  www.pgjdf.gob.mx  •Llenar formato único •Imprimir código de 32 dígitos  •Copia de identificación •Presentarse en fecha y hora indicados."
                    android:layout_width="match_parent"
                    android:layout_marginTop="8sp"
                    android:fontFamily="@font/roboto"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20" android:textSize="12sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>