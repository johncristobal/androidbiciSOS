<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="match_parent"
        tools:context=".Fragments.alertas.HelpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/backblackbutton"
            android:layout_height="match_parent">

        <ImageView
                android:src="@drawable/backalerta"
                android:layout_width="0dp"
                android:scaleType="fitCenter"
                android:layout_height="0dp"
                android:id="@+id/imageView5"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/textViewCerrar"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:src="@drawable/helpicon"
                android:transitionName="help"
                android:layout_marginBottom="64dp"
                app:layout_constraintBottom_toTopOf="@+id/textView27"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5" />

        <ImageView
                android:id="@+id/buttonRegresar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/closeicon"
                android:textColor="@color/blanco"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
            android:textAlignment="center"
            android:text="Si necesitas apoyo urgente \n por parte de la polcÃ­a auxiliar\n o ambulancia en caso de accidente."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonHelp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/callnueveonce"
            android:id="@+id/buttonHelp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="o para contacto personal reporta \ndirecto en sus redes sociales."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonHelp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/textView26"
            android:layout_height="30dp">

    </LinearLayout>
    <ImageView
            android:src="@drawable/twwiter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView26" app:layout_constraintStart_toStartOf="@+id/buttonHelp"
            android:layout_marginStart="18dp"/>
    <TextView
            android:text="\@C5_CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewC5" app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    <TextView
            android:text="\@SSP_CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSSP" app:layout_constraintStart_toStartOf="@+id/textViewC5"
            app:layout_constraintTop_toBottomOf="@+id/textViewC5" android:layout_marginTop="10dp"/>
    <TextView
            android:text="\@UCS_GCDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUCS" app:layout_constraintStart_toEndOf="@+id/textViewC5"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewC5"/>
    <TextView
            android:text="\@PGJDF_CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPGJDF" app:layout_constraintStart_toEndOf="@+id/textViewSSP"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewSSP"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>