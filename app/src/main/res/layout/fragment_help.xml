<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#BB000000"
        android:layout_height="match_parent"
        tools:context=".Fragments.alertas.HelpFragment">

    <ImageView
            android:src="@drawable/backalerta"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

    <ImageView
            android:textAlignment="center"
            android:src="@drawable/helpicon"
            android:textColor="#fff"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:id="@+id/textViewCerrar"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:transitionName="help"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/textView27"/>

    <TextView
            android:textAlignment="center"
            android:text="Si necesitas apoyo urgente \n por parte de la polcÃ­a auxiliar\n o ambulancia en caso de accidente."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonHelp"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/callnueveonce"
            android:hint="Detalles particulares..."
            android:ems="10"
            android:id="@+id/buttonHelp"
            android:textSize="16sp"
            android:inputType="textMultiLine"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:singleLine="false"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="o para contacto personal reporta \ndirecto en sus redes sociales."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/buttonHelp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/textView26"
            android:layout_height="30dp">

        <Button
                android:text="Regresar"
                android:layout_gravity="end"
                android:layout_width="120dp"
                android:textColor="@color/amarillo"
                android:layout_margin="10dp"
                android:background="@drawable/backbrown"
                android:layout_height="30dp"
                android:id="@+id/buttonRegresar"/>

    </LinearLayout>
    <ImageView
            android:src="@drawable/twwiter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView26" app:layout_constraintStart_toStartOf="@+id/buttonHelp"
            android:layout_marginStart="18dp"/>
    <TextView
            android:text="@C5_CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewC5" app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    <TextView
            android:text="@SSP_CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSSP" app:layout_constraintStart_toStartOf="@+id/textViewC5"
            app:layout_constraintTop_toBottomOf="@+id/textViewC5" android:layout_marginTop="10dp"/>
    <TextView
            android:text="@UCS_GCDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUCS" app:layout_constraintStart_toEndOf="@+id/textViewC5"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewC5"/>
    <TextView
            android:text="@PGJDF_CDMX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPGJDF" app:layout_constraintStart_toEndOf="@+id/textViewSSP"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewSSP"/>

</androidx.constraintlayout.widget.ConstraintLayout>