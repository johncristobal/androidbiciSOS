<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="textTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="textThemeTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="textButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/backgoogle</item>
    </style>

    <style name="textInputTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/backinput</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
