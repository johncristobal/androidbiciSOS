<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="AppThemeGtt" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blanco</item>
        <item name="colorPrimaryDark">@color/colorPrimaryGtt</item>
        <item name="android:textColorPrimary">@color/colorPrimaryGtt</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccentGtt</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeGtt.Drawer" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/colorPrimaryGtt</item>
    </style>
    <!--style name="ActionBarThemeGtt" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/blanco</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>
    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryGtt</item>
    </style-->

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimaryGtt</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeGtt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="textTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="textThemeButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="textThemeBold" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textThemeSOS" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/cafe</item>
    </style>

    <style name="textThemeTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="textButtonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/backgoogle</item>
    </style>

    <style name="textButtonThemeSos" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/cafe</item>
        <item name="android:background">@drawable/backbutton</item>
    </style>

    <style name="textInputTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:background">@drawable/backinput</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="progressBarWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
